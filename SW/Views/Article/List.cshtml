@{ 
    Layout = null;
    List<SW.Model.Authorization_Role_SysUser_Module> moudule = ViewData["moudule"] as List<SW.Model.Authorization_Role_SysUser_Module>;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BootStrap Table使用</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/Content/AdminCMS/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/Content/AdminCMS/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/Content/AdminCMS/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="~/Content/AdminCMS/css/animate.css" rel="stylesheet">
    <link href="~/Content/AdminCMS/css/style.css?v=4.1.0" rel="stylesheet">
</head>
<body>
    <div class="panel-body" style="padding-bottom:0px;">
        <div id="toolbar" class="btn-group">
            <form class="form-inline">
                <button id="btn_add" type="button" class="btn btn-success" data-toggle="modal" data-target="#addList">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </button>
                <button id="btn_edit" type="button" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                </button>
                <button id="btn_delete" type="button" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                </button>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">模块分类</div>
                        <select class="form-control" name="Module" id="sModule" style="font-size:12px;">
                            <option value=0>请选择模块</option>
                            @foreach (var item in moudule)
                            {
                                <option value=@item.ModuleId>@item.ModuleName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">归属人</div>
                        <input type="text" class="form-control" id="sUserName" placeholder="归属人">
                    </div>
                </div>
                <button type="button" class="btn btn-primary" id="btn_search">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>查询
                </button>
            </form>
        </div>
        <table id="tb_articles"></table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width: 800px;">

                <form action="/Article/Added" method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ModuleId">模块</label>
                            <select class="form-control" name="ModuleId" id="ModuleId">
                                <option value=0>请选择模块</option>
                                @foreach (var item in moudule)
                                {
                                    <option value=@item.ModuleId>@item.ModuleName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Title">标题</label>
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="标题">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">File input</label>
                            <input type="file" id="exampleInputFile" name="ArcFiles">
                            <p class="help-block">请选择图片格式上传为封面.</p>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">内容</label>
                            <div id="Infotext" name="Infotext">
                                <p>欢迎使用 <b>wangEditor</b> 富文本编辑器</p>
                            </div>
                            <input type="text" class="form-control" id="Contents" name="Contents" placeholder="内容HTML" style="position: absolute; top: -9999px;left: -9999px;">
                            <input type="text" class="form-control" id="Info" name="Info" placeholder="内容TEXT" style="position: absolute; top: -9999px;left: -9999px;">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary" id="aSubmit">保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="~/Content/AdminCMS/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/AdminCMS/js/bootstrap.min.js?v=3.3.6"></script>

    <!-- 自定义js -->
    <script src="~/Content/AdminCMS/js/content.js?v=1.0.0"></script>
     
    <!-- Bootstrap table -->
    <script src="~/Content/AdminCMS/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/Content/AdminCMS/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
    <script src="~/Content/AdminCMS/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="../wangEditor-3.1.1/release/wangEditor.min.js"></script>
    <script src="~/Content/AdminCMS/articles/articlesList.js"></script>

</body>
</html>